---
export interface Props {
  html: string;
  size?: "sm" | "base" | "lg";
}

const { html, size = "base" } = Astro.props;

const classes = `prose prose--${size}`;
---

<div class={classes} set:html={html} />

<style>
  .prose {
    color: var(--color-text);
    line-height: 1.9;
    max-width: 70ch;
  }

  .prose--sm {
    font-size: 0.95rem;
  }

  .prose--base {
    font-size: 1rem;
  }

  .prose--lg {
    font-size: 1.1rem;
  }

  .prose p {
    margin: 0 0 1.6rem;
  }

  .prose h1,
  .prose h2,
  .prose h3 {
    margin: 1.8rem 0 0.9rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.3;
  }

  .prose h1 {
    font-size: 1.6rem;
  }

  .prose h2 {
    font-size: 1.4rem;
  }

  .prose h3 {
    font-size: 1.2rem;
  }

  .prose a {
    color: var(--color-primary);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 3px;
  }

  .prose a:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
    border-radius: 0.3rem;
  }

  .prose ul,
  .prose ol {
    margin: 0 0 1.8rem;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 1.75rem;
  }

  .prose li {
    margin: 0;
    line-height: 1.9;
  }

  .prose li::marker {
    content: "";
  }

  .prose strong {
    color: var(--color-text);
  }

  .prose code {
    background: var(--color-layer-2);
    padding: 0.1rem 0.35rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
  }

  .prose blockquote {
    margin: 1.5rem 0;
    padding-left: 1rem;
    border-left: 4px solid color-mix(in srgb, var(--color-primary) 40%, transparent);
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
