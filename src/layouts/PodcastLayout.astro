---
import "../styles/global.css";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
  description: string;
  lang: string;
  image?: string;
  type?: "website" | "article";
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  keywords?: string[];
  canonical?: string;
}

const {
  title,
  description,
  lang,
  image = "/images/default-og.jpg",
  type = "website",
  publishedTime,
  modifiedTime,
  author = "MelodyMind Podcasts",
  keywords = [],
  canonical,
} = Astro.props;

// SEO optimized titles and descriptions
const siteTitle = "MelodyMind Podcasts";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const siteUrl = "https://podcasts.melody-mind.de"; // Replace with your actual domain
const currentUrl = canonical || `${siteUrl}${Astro.url.pathname}`;
const imageUrl = image.startsWith("http") ? image : `${siteUrl}${image}`;

// Language-specific meta
const langMeta = {
  en: {
    siteName: "MelodyMind Podcasts - Music History Through Audio",
    defaultKeywords: [
      "podcast",
      "music history",
      "audio",
      "streaming",
      "entertainment",
    ],
  },
  de: {
    siteName: "MelodyMind Podcasts - Musikgeschichte durch Audio",
    defaultKeywords: [
      "podcast",
      "musikgeschichte",
      "audio",
      "streaming",
      "unterhaltung",
    ],
  },
  es: {
    siteName: "MelodyMind Podcasts - Historia Musical a través del Audio",
    defaultKeywords: [
      "podcast",
      "historia musical",
      "audio",
      "streaming",
      "entretenimiento",
    ],
  },
  fr: {
    siteName: "MelodyMind Podcasts - Histoire Musicale par Audio",
    defaultKeywords: [
      "podcast",
      "histoire musicale",
      "audio",
      "streaming",
      "divertissement",
    ],
  },
  it: {
    siteName: "MelodyMind Podcasts - Storia Musicale attraverso Audio",
    defaultKeywords: [
      "podcast",
      "storia musicale",
      "audio",
      "streaming",
      "intrattenimento",
    ],
  },
  pt: {
    siteName: "MelodyMind Podcasts - História Musical através de Áudio",
    defaultKeywords: [
      "podcast",
      "história musical",
      "áudio",
      "streaming",
      "entretenimento",
    ],
  },
};

const currentLangMeta = langMeta[lang as keyof typeof langMeta] || langMeta.en;
const allKeywords = [...currentLangMeta.defaultKeywords, ...keywords].join(
  ", "
);

// Translations for skip link
const skipLinkTranslations = {
  en: "Skip to main content",
  de: "Zum Hauptinhalt springen",
  es: "Saltar al contenido principal",
  fr: "Aller au contenu principal",
  it: "Vai al contenuto principale",
  pt: "Pular para o conteúdo principal",
};

const skipLinkText =
  skipLinkTranslations[lang as keyof typeof skipLinkTranslations] ||
  skipLinkTranslations.en;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Melody Mind Podcasts" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content={allKeywords} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content={lang} />
    <meta name="revisit-after" content="7 days" />

    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />
    <!-- Sitemap discovery -->
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

    <!-- Favicon and Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content={currentLangMeta.siteName} />
    <meta
      property="og:locale"
      content={lang === "en"
        ? "en_US"
        : lang === "de"
          ? "de_DE"
          : lang === "es"
            ? "es_ES"
            : lang === "fr"
              ? "fr_FR"
              : lang === "it"
                ? "it_IT"
                : "pt_PT"}
    />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    {type === "article" && <meta property="article:author" content={author} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageUrl} />
    <meta property="twitter:creator" content="@melodymind" />
    <meta property="twitter:site" content="@melodymind" />

    <!-- Alternative Languages -->
    <link
      rel="alternate"
      hreflang="en"
      href={`${siteUrl}/en${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />
    <link
      rel="alternate"
      hreflang="de"
      href={`${siteUrl}/de${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />
    <link
      rel="alternate"
      hreflang="es"
      href={`${siteUrl}/es${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />
    <link
      rel="alternate"
      hreflang="fr"
      href={`${siteUrl}/fr${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />
    <link
      rel="alternate"
      hreflang="it"
      href={`${siteUrl}/it${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />
    <link
      rel="alternate"
      hreflang="pt"
      href={`${siteUrl}/pt${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />
    <link
      rel="alternate"
      hreflang="x-default"
      href={`${siteUrl}/en${Astro.url.pathname.replace(`/${lang}`, "")}`}
    />

    <!-- RSS Feeds -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`RSS Feed - ${title}`}
      href={`/${lang}/rss.xml`}
    />

    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": type === "article" ? "PodcastEpisode" : "WebSite",
        name: fullTitle,
        description: description,
        url: currentUrl,
        image: imageUrl,
        inLanguage: lang,
        publisher: {
          "@type": "Organization",
          name: "MelodyMind Podcasts",
          url: siteUrl,
          logo: {
            "@type": "ImageObject",
            url: `${siteUrl}/images/logo.png`,
          },
        },
        ...(type === "article" && publishedTime
          ? {
              datePublished: publishedTime,
              dateModified: modifiedTime || publishedTime,
              author: {
                "@type": "Person",
                name: author,
              },
            }
          : {}),
        ...(type === "website"
          ? {
              potentialAction: {
                "@type": "SearchAction",
                target: `${siteUrl}/?q={search_term_string}`,
                "query-input": "required name=search_term_string",
              },
            }
          : {}),
      })}
    />

    <!-- WCAG AAA: Prefers-reduced-motion support -->
    <style>
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
    </style>
  </head>
  <body class="bg-slate-900 text-slate-50" id="top">
    <div class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-6 py-8">
      <!-- Skip to main content link for screen readers -->
      <a
        href="#main-content"
        class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-purple-600 text-white px-4 py-2 rounded-md z-50"
      >
        {skipLinkText}
      </a>

      <Header lang={lang} />

      <main id="main-content" role="main">
        <slot />
      </main>

      <footer
        class="mt-16 pt-6 border-t border-slate-700 text-center text-slate-400"
        role="contentinfo"
      >
        <p>
          &copy; 2025 MelodyMind Podcasts |
          <a
            href="https://melody-mind.de"
            class="text-purple-400 hover:text-purple-300 focus:text-purple-300 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-slate-900 rounded px-1"
            aria-label="Visit MelodyMind game website">Back to Game</a
          > |
          <a
            href={`/${lang}/rss.xml`}
            class="text-orange-400 hover:text-orange-300 focus:text-orange-300 transition-colors focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 focus:ring-offset-slate-900 rounded px-1"
            aria-label="Subscribe to RSS feed">RSS Feed</a
          >
        </p>
      </footer>
    </div>

    <!-- Fathom - beautiful, simple website analytics -->
    <script src="https://cdn.usefathom.com/script.js" data-site="VDTKKBDN" defer
    ></script>
    <!-- / Fathom -->
  </body>
</html>
