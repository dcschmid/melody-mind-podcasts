---
export interface Props {
  html: string;
  size?: 'sm' | 'base' | 'lg';
}

const { html, size = 'base' } = Astro.props;

const sizeClasses = {
  sm: 'text-sm',
  base: 'text-base',
  lg: 'text-lg'
};

const classes = `${sizeClasses[size]} text-[var(--color-text)] prose prose-invert max-w-none
  prose-headings:text-[var(--color-text)] prose-headings:font-semibold prose-headings:mt-6 prose-headings:mb-3
  prose-h1:text-2xl prose-h2:text-xl prose-h3:text-lg
  prose-p:mb-4 prose-p:leading-relaxed
  prose-a:text-[var(--color-primary)] prose-a:no-underline hover:prose-a:text-[var(--color-secondary)] hover:prose-a:underline
  prose-strong:text-[var(--color-text)] prose-strong:font-semibold
  prose-ul:my-4 prose-ul:pl-6 prose-ol:my-4 prose-ol:pl-6
  prose-li:mb-2
  prose-code:bg-[var(--color-layer-2)] prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:text-[var(--color-text)]
  prose-blockquote:border-l-4 prose-blockquote:border-[color-mix(in_srgb,var(--color-primary)_40%,transparent)] prose-blockquote:pl-4 prose-blockquote:my-6 prose-blockquote:italic`;
---

<div class={classes} set:html={html} />
