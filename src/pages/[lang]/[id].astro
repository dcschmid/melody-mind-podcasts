            <div
              id="progress-bar"
              role="slider"
              aria-label="Audio progress"
              aria-valuemin="0"
              aria-valuemax="100"
              aria-valuenow="0"
              tabindex="0"
              class="relative h-3 w-full cursor-pointer rounded-full bg-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-gray-900"
