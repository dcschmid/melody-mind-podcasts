---
export interface Props {
  html: string;
  size?: 'sm' | 'base' | 'lg';
}

const { html, size = 'base' } = Astro.props;

const classes = `prose prose--${size}`;
---

<div class={classes} set:html={html} />

<style>
  .prose {
    max-inline-size: 70ch;
    line-height: 1.9;
    color: var(--color-text);
  }

  .prose--sm {
    font-size: 0.95rem;
  }

  .prose--base {
    font-size: 1rem;
  }

  .prose--lg {
    font-size: 1.1rem;
  }

  .prose p {
    margin: 0 0 1.6rem;
  }

  .prose h1,
  .prose h2,
  .prose h3 {
    margin: 1.8rem 0 0.9rem;
    font-weight: 700;
    line-height: 1.6;
    color: var(--color-text);
  }

  .prose h1 {
    font-size: 1.6rem;
  }

  .prose h2 {
    font-size: 1.4rem;
  }

  .prose h3 {
    font-size: 1.2rem;
  }

  .prose a {
    color: var(--color-primary);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 3px;
  }

  .prose a:focus-visible {
    outline: none;
    border-radius: 0.3rem;
    box-shadow: var(--focus-ring);
  }

  .prose ul,
  .prose ol {
    display: grid;
    gap: 1.75rem;
    padding-inline-start: 1.5rem;
    margin: 0 0 1.8rem;
    list-style-position: outside;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose li {
    margin: 0;
    line-height: 1.9;
  }

  .prose strong {
    color: var(--color-text);
  }

  .prose code {
    padding: 0.1rem 0.35rem;
    font-family:
      ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New',
      monospace;
    font-size: 0.9em;
    background: var(--color-layer-2);
    border-radius: 0.25rem;
  }

  .prose blockquote {
    padding-inline-start: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-muted);
    border-inline-start: 4px solid color-mix(in srgb, var(--color-primary) 40%, transparent);
  }
</style>
