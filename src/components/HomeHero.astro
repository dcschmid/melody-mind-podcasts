---
import Deezer from '../assets/deezer.svg';
import YouTube from '../assets/youtube.svg';
import Spotify from '../assets/spotify.svg';

interface Props {
  title: string;
  subtitle: string;
  description: string;
  totalEpisodes: number;
  featuredContent: string;  
  availableOn: string;
  spotifyUrl: string;
  deezerUrl: string;
  youtubeUrl: string;
}

const {
  title,
  subtitle,
  description,
  totalEpisodes,
  featuredContent,
  availableOn,
  spotifyUrl,
  deezerUrl,
  youtubeUrl,
} = Astro.props as Props;
---

<section class="home-hero">
  <div class="home-hero__inner">
    <div class="home-hero__grid">
      <div class="home-hero__copy">
        <div class="home-hero__intro">
          <h1 class="home-hero__title">{title}</h1>
          <p class="home-hero__subtitle">{subtitle}</p>
          <p class="home-hero__description">{description}</p>
        </div>

        <div class="home-hero__cta-row">
          <a href="#episodes-heading" class="home-hero__cta home-hero__cta--primary">
            Browse episodes
          </a>
          <a href="/rss.xml" class="home-hero__cta home-hero__cta--secondary" aria-label="Subscribe to RSS feed">
            RSS feed
          </a>
        </div>
      </div>

      <div class="home-hero__visual">
        <img
          src="/the-melody-mind-podcast.jpg"
          alt="Illustrated cover art"
          class="home-hero__image"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>

    <div class="home-hero__info">
      <div class="home-hero__highlights">
        <div class="home-hero__highlight">
          <span aria-hidden="true">ðŸŽ§</span>
          <span>
            New episodes perfect for a walk, commute, or cozy night in.
          </span>
        </div>
        <div class="home-hero__highlight">
          <span aria-hidden="true">âœ¨</span>
          <span>
            Stories first, facts second: always warm, curious, and welcoming.
          </span>
        </div>
        <div class="home-hero__highlight">
          <span aria-hidden="true">ðŸŽ¶</span>
          <span>
            From rock â€™nâ€™ roll sparks to electronic fireworks â€” hear how music became the soundtrack of our lives.
          </span>
        </div>
      </div>

      <div class="home-hero__platforms">
        <span class="home-hero__platforms-label">{availableOn}</span>
        <div class="home-hero__platforms-row">
          <a
            href={spotifyUrl}
            class="home-hero__platform-link home-hero__platform-link--spotify"
            aria-label="Listen on Spotify"
            target="_blank"
            rel="noopener"
          >
            <span class="home-hero__platform-icon" aria-hidden="true">
              <Spotify />
            </span>
            Spotify
          </a>
          <a
            href={deezerUrl}
            class="home-hero__platform-link home-hero__platform-link--deezer"
            aria-label="Listen on Deezer"
            target="_blank"
            rel="noopener"
          >
            <span class="home-hero__platform-icon" aria-hidden="true">
              <Deezer />
            </span>
            Deezer
          </a>
          <a
            href={youtubeUrl}
            class="home-hero__platform-link home-hero__platform-link--youtube"
            aria-label="Listen on YouTube"
            target="_blank"
            rel="noopener"
          >
            <span class="home-hero__platform-icon" aria-hidden="true">
              <YouTube />
            </span>
            YouTube
          </a>
        </div>
      </div>

      <div class="home-hero__meta">
        <span class="home-hero__meta-item">
          {totalEpisodes} episodes available
        </span>
        <span class="home-hero__meta-item">
          {featuredContent}
        </span>
      </div>
    </div>
  </div>
</section>

<style>
  .home-hero {
    position: relative;
    padding: 3rem 2rem;
    border-radius: 2rem;
    background: linear-gradient(140deg, rgba(13, 18, 26, 0.8), transparent 55%), var(--color-surface);
    border: 1px solid color-mix(in srgb, var(--color-primary) 24%, transparent);
    box-shadow: var(--shadow-soft);
    overflow: hidden;
  }

  .home-hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 18% 22%, rgba(79, 211, 255, 0.12), transparent 35%),
      radial-gradient(circle at 82% 12%, rgba(44, 198, 255, 0.12), transparent 32%),
      radial-gradient(circle at 70% 68%, rgba(138, 217, 255, 0.1), transparent 38%);
    opacity: 0.85;
  }

  .home-hero__inner {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: stretch;
    max-width: 68rem;
    margin: 0 auto;
  }

  .home-hero__grid {
    display: grid;
    gap: 2rem;
    align-items: center;
  }

  .home-hero__copy {
    display: grid;
    gap: 1.5rem;
  }

  .home-hero__intro {
    display: grid;
    gap: 0.75rem;
  }

  .home-hero__title {
    margin: 0;
    font-size: 2.6rem;
    font-weight: 800;
    background: var(--brand-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 0 18px 40px rgba(0, 0, 0, 0.4);
  }

  .home-hero__subtitle {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .home-hero__description {
    margin: 0;
    font-size: 1.05rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .home-hero__visual {
    display: grid;
    gap: 0.75rem;
  }

  .home-hero__image {
    width: 100%;
    height: auto;
    border-radius: 1.6rem;
    border: 1px solid color-mix(in srgb, var(--color-primary) 25%, transparent);
    box-shadow: var(--shadow-strong);
    display: block;
  }

  .home-hero__info {
    display: grid;
    gap: 2rem;
  }

  .home-hero__highlights {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(14rem, 1fr));
  }

  .home-hero__highlight {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    padding: 1rem 1.2rem;
    border-radius: 1.1rem;
    background: var(--color-layer-1);
    border: 1px solid color-mix(in srgb, var(--color-primary) 22%, transparent);
    color: var(--color-text);
  }

  .home-hero__cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: flex-start;
  }

  .home-hero__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.4rem;
    border-radius: 0.9rem;
    font-size: 0.95rem;
    font-weight: 700;
    text-decoration: none;
  }

  .home-hero__cta--primary {
    background: var(--color-primary);
    color: var(--color-background);
    box-shadow: var(--shadow-strong);
  }

  .home-hero__cta--secondary {
    background: var(--color-layer-1);
    border: 1px solid color-mix(in srgb, var(--color-primary) 30%, transparent);
    color: var(--color-text);
  }

  .home-hero__cta:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
  }

  .home-hero__platforms {
    display: grid;
    gap: 0.75rem;
    justify-items: start;
  }

  .home-hero__platforms-label {
    color: var(--color-text-muted);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .home-hero__platforms-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: flex-start;
  }

  .home-hero__platform-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.95rem;
    border-radius: 0.9rem;
    background: var(--color-layer-2);
    border: 1px solid color-mix(in srgb, var(--color-primary) 28%, transparent);
    color: var(--color-text);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
  }

  .home-hero__platform-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.35rem;
    height: 1.35rem;
    flex-shrink: 0;
    color: var(--platform-color, var(--color-primary));
  }

  .home-hero__platform-icon svg {
    width: 100%;
    height: 100%;
  }

  .home-hero__platform-link--spotify {
    --platform-color: #1db954;
  }

  .home-hero__platform-link--deezer {
    --platform-color: #ef5466;
  }

  .home-hero__platform-link--youtube {
    --platform-color: #ff0000;
  }

  .home-hero__platform-link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
  }

  .home-hero__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: flex-start;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .home-hero__meta-item {
    padding: 0.4rem 0.85rem;
    border-radius: 0.75rem;
    background: var(--color-layer-2);
    border: 1px solid color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  @media (min-width: 900px) {
    .home-hero__grid {
      grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
      gap: 3rem;
    }

    .home-hero__title {
      font-size: 3.1rem;
    }

    .home-hero__subtitle {
      font-size: 1.35rem;
    }
  }
</style>
