---
interface Props {
  id: string;
  title: string;
  description: string;
  imageUrl: string;
  durationSeconds?: number;
  searchText: string;
  publishedAt: string;
  publishedLabel: string;
  isLatest: boolean;
}

const {
  id,
  title,
  description,
  imageUrl,
  durationSeconds,
  searchText,
  publishedAt,
  publishedLabel,
  isLatest,
} = Astro.props as Props;
---

<article
  data-episode
  data-search={searchText}
  class="episode-card"
  role="listitem"
>
  <div class="episode-card__media">
    <img
      src={`/images/${imageUrl}.jpg`}
      alt={`Cover image for ${title} podcast episode`}
      class="episode-card__image"
      loading="lazy"
      decoding="async"
      width={600}
      height={400}
    />
  </div>
  <div class="episode-card__body">
    <div class="episode-card__meta">
      <time class="episode-card__date" datetime={publishedAt}>
        {publishedLabel}
      </time>
      {isLatest && <span class="episode-card__badge">Latest</span>}
      {durationSeconds && (
        <span class="episode-card__duration">
          {Math.floor(durationSeconds / 60)} min
        </span>
      )}
    </div>
    <h3 class="episode-card__title">
      {title}
    </h3>
    <p class="episode-card__description">
      {description}
    </p>
    <a
      href={`/${id}`}
      class="episode-card__link"
      aria-label={`Listen to ${title} podcast episode`}
    >
      Listen Now
    </a>
  </div>
</article>

  <style>
  .episode-card {
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
    padding: 1.1rem 0;
    border-bottom: 1px solid color-mix(in srgb, var(--color-primary) 18%, transparent);
  }

  .episode-card[hidden] {
    display: none;
  }

  .episode-card__media {
    position: relative;
    width: 100%;
  }

  .episode-card__image {
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
    border: 1px solid color-mix(in srgb, var(--color-primary) 20%, transparent);
    display: block;
  }

  .episode-card__body {
    display: grid;
    gap: 0.7rem;
  }

  .episode-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .episode-card__date {
    font-weight: 600;
    color: var(--color-text-muted);
  }

  .episode-card__badge,
  .episode-card__duration {
    padding: 0.2rem 0.6rem;
    border-radius: 999px;
    background: var(--color-layer-2);
    border: 1px solid color-mix(in srgb, var(--color-primary) 18%, transparent);
    color: var(--color-text);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .episode-card__badge {
    background: color-mix(in srgb, var(--color-primary) 16%, var(--color-layer-2));
    color: var(--color-text);
  }

  .episode-card__title {
    margin: 0;
    font-size: 1.2rem;
    color: var(--color-text);
  }

  .episode-card__description {
    margin: 0;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .episode-card__link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem 1rem;
    border-radius: 0.75rem;
    background: var(--color-primary);
    color: var(--color-background);
    font-weight: 700;
    text-decoration: none;
    width: fit-content;
  }

  .episode-card__link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
  }

  @media (min-width: 760px) {
    .episode-card {
      flex-direction: row;
      align-items: flex-start;
      gap: 1.5rem;
      padding: 1.5rem 0;
    }

    .episode-card__media {
      flex: 0 0 10.5rem;
      align-self: flex-start;
    }

    .episode-card__image {
      width: 100%;
      height: 6rem;
      object-fit: cover;
    }

    .episode-card__body {
      flex: 1;
    }
  }

  @media (min-width: 1024px) {
    .episode-card__media {
      flex: 0 0 12rem;
    }

    .episode-card__image {
      height: 6.75rem;
    }
  }
</style>
