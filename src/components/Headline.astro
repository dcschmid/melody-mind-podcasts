---
export interface Props {
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  textSize?: 'sm' | 'base' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl';
  className?: string;
}

const { level = 'h2', textSize = 'xl', className = '' } = Astro.props;

const Tag = level;
const sizeClasses = {
  sm: 'text-sm',
  base: 'text-base',
  lg: 'text-lg',
  xl: 'text-xl',
  '2xl': 'text-2xl',
  '3xl': 'text-3xl',
  '4xl': 'text-4xl'
};

const baseClasses = 'font-bold text-white leading-tight';
const classes = `${baseClasses} ${sizeClasses[textSize]} ${className}`.trim();
---

<Tag class={classes}>
  <slot />
</Tag>
