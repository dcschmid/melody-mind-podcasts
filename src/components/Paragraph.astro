---
export interface Props {
  textSize?: 'sm' | 'base' | 'lg' | 'xl';
  tone?: 'default' | 'muted';
  className?: string;
}

const { textSize = 'base', tone = 'muted', className = '' } = Astro.props;

const sizeClasses = {
  sm: 'paragraph--sm',
  base: 'paragraph--base',
  lg: 'paragraph--lg',
  xl: 'paragraph--xl',
};

const toneClasses = {
  default: 'paragraph--default',
  muted: 'paragraph--muted',
};

const classes = ['paragraph', sizeClasses[textSize], toneClasses[tone], className]
  .filter(Boolean)
  .join(' ');
---

<p class={classes}>
  <slot />
</p>

<style>
  .paragraph {
    margin: 0;
    line-height: var(--leading-relaxed, 1.75);
    color: var(--color-text);
  }

  .paragraph--default {
    color: var(--color-text);
  }

  .paragraph--muted {
    color: var(--color-text-muted);
  }

  .paragraph--sm {
    font-size: var(--font-size-caption);
  }

  .paragraph--base {
    font-size: var(--font-size-ui);
  }

  .paragraph--lg {
    font-size: var(--font-size-body);
  }

  .paragraph--xl {
    font-size: var(--font-size-body-strong);
  }
</style>
